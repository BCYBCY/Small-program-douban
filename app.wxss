/**app.wxss**/
@import "wa-ui.wxss";
.bigTitle{
	font-size: 14px;
}
.listImg{
	width: 200rpx;
	height: 300rpx;
}
.floatL{
	float: left;
}
.line20{
	line-height: 20px;
}
page{
  font-family: "Microsoft YaHei";
  background-color: white;
  display: flex;
  flex-direction: column;
}
.page-header{
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;

}
.page-header-text{
  padding: 20rpx 40px;
  color: #999;
  font-size: 40rpx;
  text-align:center;

}
.page-body{
  display: flex;
  flex: 1;
  flex-direction:column;
}
.item{
  display: flex;
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 40rpx;
}

.item .poster{
  width: 128rpx;
  height: 128rpx;
  margin-right: 20px;
}
.item .meta{

  flex: 1;
}
.item .title, .item .sub-title{
  display: block;
  margin-bottom: 14rpx;
}
.item .title{
  font-size: 32rpx;
}
.item .sub-title{
  font-size: 22rpx;
  color: #c0c0c0;
}
.item .artists{
  font-size: 26rpx;
  color: #999;
}
.item .rating{
  font-size: 28rpx;
  color: red;
  font-weight: bold;
}